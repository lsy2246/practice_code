---
import MainLayout from "../components/MainLayout.astro";
import { MorphingText } from "../components/morphing-text";
---

<MainLayout title="首页 - 河北游礼">
  <!-- 主页文字特效区域 -->
  <section
    class="hero-section w-full h-screen flex items-center justify-center bg-gradient-to-br from-travel via-paper to-recipe dark:from-dark-travel dark:via-dark-paper dark:to-dark-recipe relative overflow-hidden"
  >
    <!-- 主要文字 -->
    <div class="relative z-10">
      <MorphingText
        texts={["这么近", "那么美", "周末来河北"]}
        client:load
        className="text-5xl md:text-7xl lg:text-8xl font-bold text-center"
      />
      <p
        class="mt-8 text-xl text-gray-700 dark:text-dark-text-secondary text-center max-w-xl mx-auto"
      >
        探索河北的美丽风景与丰富文化，体验独特的旅游体验
      </p>
    </div>
  </section>
</MainLayout>
